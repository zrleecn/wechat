.title{
  
  padding: 10px;
  font-size: 16px;
}
.text-content-view{
  width: 100%;
  height: 100px;
  background: #fff;
  font-size: 14px;
  padding: 10px;
  box-sizing: border-box;
  margin-bottom: 10px;
  position: relative ;
  
  
}

.text-content-view textarea{
  width: 100%;
  height: 100%;
  overflow-y: auto;
  margin-right: 10px;

 
}

.emji {
   position: absolute;
  font-size: 25px;
  left: 10px;
  bottom: 0px;
  z-index: 99;

 
}
.img-list{
 padding-bottom: 10px;

}
.img-item{
  width: 25px;height: 25px;
  padding-left: 15px;
  padding-top:15px ;

}
.user-comment{
  width: 100%;
  
}
.comment-header{
  margin-top: 30px;
  width: 100%;
  display: flex ;
  justify-content: space-around;
  font-size: 14px;

}

.comment-header .line{
  margin-top: 20px;
